<h2>{{t "profile.housings.title"}} {{#link-to "profile.housings.edit" "new" classNames="btn btn-primary"}}{{fa-icon "plus"}} {{t "profile.housings.add_housing"}} {{/link-to}}
</h2>

{{#if model}}
  <ul class="nav nav-tabs">
  {{#each model as |housing|}}
    <li class="nav-item">
      {{#link-to "profile.housings.edit" housing.id classNames="nav-link" classNameBindings="housing.isNew:active"}}{{housing.name}}{{/link-to}}
    </li>
  {{/each}}
  </ul>
{{else}}
  {{t "profile.housings.no_housing"}}
{{/if}}

{{outlet}}